@page
@model AccountingApp.Pages.Users.IndexModel

@{
    ViewData["Title"] = "Přehled uživatelů";
    Layout = "_Layout";
}

<h2>Přehled uživatelů</h2>

<a asp-page="Create"><button type="button" class="btn btn-success">Nový <i class="fas fa-plus"></i></button></a>

<div class="table-wrapper">
    <table class="table" xmlns:th="http://www.w3.org/1999/xhtml">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.AppUser[0].Id)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.AppUser[0].UserName)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.AppUser[0].FirstName)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.AppUser[0].LastName)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.AppUser[0].Email)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.AppUser[0].Role.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.AppUser)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Role.Name)
                    </td>
                    <td>
                        <a asp-page="./Details" asp-route-id="@item.Id"><i class="far fa-info-circle"></i></a>
                        <a asp-page="./Edit" asp-route-id="@item.Id"><i class="far fa-edit"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Head
{
    <script src="//cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <link rel="stylesheet" href="//cdn.datatables.net/1.10.20/css/jquery.dataTables.min.css" />
}

@section Scripts
{
    <script>
        $(document).ready(function () {
            $('.table').DataTable();
        });
    </script>
}