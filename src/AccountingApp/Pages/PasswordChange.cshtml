@page
@model AccountingApp.PasswordChangeModel
@{
    Layout = "_Layout";
}

<h2>Změna hesla</h2>

<a asp-page="/User/Details"><button type="button" class="btn btn-primary">Zpět</button></a>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PasswordChange.OldPassword" class="control-label"></label>
                <input asp-for="PasswordChange.OldPassword" class="form-control" type="password" />
            </div>
            <div class="form-group">
                <label asp-for="PasswordChange.NewPassword" class="control-label"></label>
                <input asp-for="PasswordChange.NewPassword" class="form-control" type="password" />
            </div>
            <div class="form-group">
                <label asp-for="PasswordChange.ConfirmPassword" class="control-label"></label>
                <input asp-for="PasswordChange.ConfirmPassword" class="form-control" type="password" />
            </div>
            <div class="form-group">
                <input type="submit" value="Změnit heslo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>